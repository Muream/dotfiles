{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/master/schema.json",
  "app_specific_configuration_path": "$Env:USERPROFILE/applications.yaml",
  "window_hiding_behaviour": "Cloak",
  "cross_monitor_move_behaviour": "Insert",
  "alt_focus_hack": true,
  "default_workspace_padding": 10,
  "default_container_padding": 10,
  "active_window_border": true,
  "active_window_border_width": 20,
  "active_window_border_offset": -5,
  "active_window_border_colours": {
    "single": { "r":137, "g": 180, "b": 250 },
    "stack": { "r": 166, "g": 227, "b": 161 },
    "monocle": { "r": 243, "g": 139, "b": 168 }
  },
  "monitors": [
    {
      "workspaces": [
        { "name": "1", "layout": "BSP" },
        {
            "name": "2",
            "layout": "BSP",
            "initial_workspace_rules": [ { "kind": "Exe", "id": "msedge.exe" } ]
        },
        {
            "name": "3",
            "layout": "Columns",
            "workspace_rules": [
                { "kind": "Exe", "id": "Discord.exe" },
                { "kind": "Exe", "id": "Ferdium.exe" },
                { "kind": "Exe", "id": "Signal.exe" }
            ]
        },
        {
            "name": "4",
            "layout": "BSP",
            "workspace_rules": [{ "kind":"Exe", "id": "Spotify.exe" }]
        },
        { "name": "5", "layout": "BSP" }
      ]
    }
  ]
}
